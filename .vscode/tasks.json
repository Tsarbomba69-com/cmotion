{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				"-Wall",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-l:cmotion.a",
				"-l:clinear.a",
				"-l:vec.a",
				"-lm",
				"-lGL",
				"-lglut",
				"-lGLU",
				"-L."
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"type": "cppbuild",
			"label": "Build exact solutions",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g3",
				"-Wall",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lm",
				"-lGL",
				"-lglut",
				"-lGLU",
				"`pkg-config --cflags --libs sdl2`",
				"-lSDL2_gfx",
				"-L."
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		}
	]
}